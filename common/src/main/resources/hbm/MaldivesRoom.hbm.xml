<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
	<class name="MaldivesRoom" table="MALDIVES_ROOM">
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		<property name="islandId" column="ISLAND_ID" length="36" />
		<property name="zhName" column="ZH_NAME" length="64" />
		<property name="enName" column="EN_NAME" length="128" />
		<property name="description" column="DESCRIPTION" length="102400" />
		<property name="num" column="NUM" />
		<property name="requirements" column="REQUIREMENTS" length="32" />
		<property name="roomFacility" column="ROOM_FACILITY" length="512" />
		<property name="displayOrder" column="DISPLAY_ORDER" />
	</class>
</hibernate-mapping>