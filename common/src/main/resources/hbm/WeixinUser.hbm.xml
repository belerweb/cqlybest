<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.belerweb.weixin.mp">
	<class name="WeixinUser" table="WEIXIN_USER">
		<id name="fakeid" column="FAKEID">
			<generator class="assigned" />
		</id>
		<property name="openid" column="OPENID" />
		<property name="nickname" column="NICKNAME" />
		<property name="reMarkName" column="RE_MARK_NAME" />
		<property name="username" column="USERNAME" />
		<property name="signature" column="SIGNATURE" />
		<property name="country" column="COUNTRY" />
		<property name="province" column="PROVINCE" />
		<property name="city" column="CITY" />
		<property name="sex" column="SEX" length="2" />
	</class>
</hibernate-mapping>