<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="ProductTravel" table="PRODUCT_TRAVEL">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="productId" column="PRODUCT_ID" length="36" />
        <property name="name" column="NAME" length="8" />
        <property name="tour" column="TOUR" type="text" />
        <property name="traffic" column="TRAFFIC" type="text" />
        <property name="eat" column="EAT" type="text" />
        <property name="live" column="LIVE" type="text" />
        <property name="purchase" column="purchase" type="text" />
    </class>
</hibernate-mapping>