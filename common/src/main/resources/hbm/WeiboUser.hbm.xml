<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="weibo4j.model">
	<class name="User" table="WEIBO_USER">
		<id name="idstr" column="IDSTR">
			<generator class="assigned" />
		</id>
		<property name="id" column="id" />
		<property name="screenName" column="SCREEN_NAME" />
		<property name="name" column="NAME" />
		<property name="province" column="PROVINCE" />
		<property name="city" column="CITY" />
		<property name="location" column="LOCATION" />
		<property name="description" column="DESCRIPTION" />
		<property name="url" column="URL" />
		<property name="profileImageUrl" column="PROFILE_IMAGE_URL" />
		<property name="profileUrl" column="PROFILE_URL" />
		<property name="domain" column="DOMAIN" />
		<property name="weihao" column="WEIHAO" />
		<property name="gender" column="GENDER" />
		<property name="followersCount" column="FOLLOWERS_COUNT" />
		<property name="friendsCount" column="FRIENDS_COUNT" />
		<property name="statusesCount" column="STATUSES_COUNT" />
		<property name="favouritesCount" column="FAVOURITES_COUNT" />
		<property name="createdAt" column="CREATED_AT" />
		<property name="following" column="FOLLOWING" />
		<property name="allowAllActMsg" column="ALLOW_ALL_ACT_MSG" />
		<property name="geoEnabled" column="GEO_ENABLED" />
		<property name="verified" column="VERIFIED" />
		<property name="verifiedType" column="VERIFIED_TYPE" />
		<property name="remark" column="REMARK" />
		<property name="allowAllComment" column="ALLOW_ALL_COMMENT" />
		<property name="avatarLarge" column="AVATAR_LARGE" />
		<property name="verifiedReason" column="VERIFIED_REASON" />
		<property name="followMe" column="FOLLOW_ME" />
		<property name="onlineStatus" column="ONLINE_STATUS" />
		<property name="biFollowersCount" column="BI_FOLLOWERS_COUNT" />
		<property name="lang" column="LANG" />
	</class>
</hibernate-mapping>