<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="Site" table="SITE">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="name" column="NAME" type="string" not-null="true" length="256" />
        <property name="metaKeyword" column="META_KEYWORD" type="string" length="256" />
        <property name="metaDescription" column="META_DESCRIPTION" type="string" length="1024" />
        <property name="copyright" column="COPYRIGHT" type="string" length="1024" />
        <property name="icp" column="ICP" type="string" length="32" />
        <property name="statisticalCode" column="STATISTICAL_CODE" type="string" length="1024" />
        <property name="imageServer" column="IMAGE_SERVER" type="string" length="256" />
        <property name="lastUpdate" column="LAST_UPDATE" not-null="true" />
    </class>
</hibernate-mapping>