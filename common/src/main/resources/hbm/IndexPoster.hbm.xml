<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="IndexPoster" table="Index_Poster">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="title" column="TITLE" type="string" not-null="true" length="32" />
        <property name="description" column="DESCRIPTION" type="string" length="256" />
        <property name="imageUrl" column="IMAGE_URL" type="string" not-null="true" length="256" />
        <property name="url" column="URL" type="string" length="256" />
        <property name="newWindow" column="NEW_WINDOW" />
        <property name="published" column="PUBLISHED" />
    </class>
</hibernate-mapping>