<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="FriendlyLink" table="FRIENDLY_LINK">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="name" column="NAME" length="128" />
        <property name="title" column="TITLE" length="128" />
        <property name="link" column="LINK" length="128" />
        <property name="imageId" column="IMAGE_ID" length="36" />
        <property name="image" column="IMAGE" length="128" />
        <property name="displayOrder" column="DISPLAY_ORDER" />
    </class>
</hibernate-mapping>