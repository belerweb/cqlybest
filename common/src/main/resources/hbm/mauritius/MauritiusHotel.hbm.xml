<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean.mauritius">
	<class name="MauritiusHotel" table="MAURITIUS_HOTEL">
		<id name="id" column="ID" type="string" length="36">
			<generator class="assigned" />
		</id>

		<property name="zhName" column="ZH_NAME" length="64" />
		<property name="enName" column="EN_NAME" length="128" />
		<property name="byName" column="BY_NAME" length="128" />
		<property name="price" column="PRICE" length="32" />
		<property name="tags" column="TAGS" length="128" />
		<property name="ad" column="AD" length="64" />
		<property name="description" column="DESCRIPTION" length="102400" />

		<property name="hotelName" column="HOTEL_NAME" length="64" />
		<property name="hotelLevel" column="HOTEL_LEVEL" />
		<property name="hotelStart" column="HOTEL_START" length="16" />
		<property name="hotelRoomNum" column="HOTEL_ROOM_NUM" />
		<property name="hotelSite" column="HOTEL_SITE" length="64" />
		<property name="hotelTel" column="HOTEL_TEL" length="32" />
		<property name="hotelFax" column="HOTEL_FAX" length="32" />
		<property name="hotelChinese" column="HOTEL_CHINESE" />
		<property name="hotelAirport" column="HOTEL_AIRPORT" length="32" />
		<property name="hotelDescription" column="HOTEL_DESCRIPTION" length="102400" />
		<property name="plays" column="PLAYS" length="128" />

		<property name="createdTime" column="CREATED_TIME" />
		<property name="lastUpdated" column="LAST_UPDATED" />
	</class>
</hibernate-mapping>