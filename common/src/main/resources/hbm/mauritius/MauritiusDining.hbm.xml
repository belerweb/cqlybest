<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean.mauritius">
	<class name="MauritiusDining" table="MAURITIUS_DINING">
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		<property name="hotelId" column="HOTEL_ID" length="36" />
		<property name="zhName" column="ZH_NAME" length="64" />
		<property name="enName" column="EN_NAME" length="128" />
		<property name="description" column="DESCRIPTION" length="102400" />

		<property name="style" column="STYLE" length="32" />
		<property name="food" column="FOOD" length="32" />
		<property name="openTime" column="OPEN_TIME" length="32" />
		<property name="location" column="LOCATION" length="32" />
		<property name="reservation" column="RESERVATION" />
		<property name="displayOrder" column="DISPLAY_ORDER" />
	</class>
</hibernate-mapping>