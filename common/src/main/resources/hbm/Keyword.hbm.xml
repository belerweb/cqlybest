<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="Keyword" table="Keyword">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="name" column="NAME" type="string" unique="true" not-null="true" length="32" />
        <property name="pinyin" column="PINYIN" type="string" length="256" />
        <property name="py" column="PY" type="string" length="32" />
    </class>
</hibernate-mapping>