<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="Product" table="PRODUCT">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="name" column="NAME" type="string" not-null="true" length="64" />
        <property name="days" column="DAYS" />
        <property name="daysUnit" column="DAYS_UNIT" />
        <property name="description" column="DESCRIPTION" type="text" />
        <property name="price" column="PRICE" />
        <property name="childPrice" column="CHILD_PRICE" />
        <property name="specialPrice" column="SPECIAL_PRICE" />
        <property name="priceDescription" column="PRICE_DESCRIPTION" type="string" length="2048" />
        <property name="effectiveDate" column="EFFECTIVE_DATE" />
        <property name="expiryDate" column="EXPIRY_DATE" />
        <property name="departureDate" column="DEPARTURE_DATE" />
        <property name="tripCharacteristic" column="TRIP_CHARACTERISTIC" type="string" length="2048" />
        <property name="serviceStandard" column="SERVICE_STANDARD" type="string" length="5120" />
        <property name="friendlyReminder" column="FRIENDLY_REMINDER" type="string" length="5120" />
        <property name="recommendedItem" column="RECOMMENDED_ITEM" type="string" length="2048" />
        <property name="published" column="PUBLISHED" />
        <property name="popular" column="POPULAR" />
        <property name="recommend" column="RECOMMEND" />
        <property name="specialOffer" column="SPECIAL_OFFER" />
        <property name="lastUpdate" column="LAST_UPDATE" />
        <set name="recommendedMonths" table="PRODUCT_RECOMMENDED_MONTH">
            <key column="ID" />
            <element column="MONTH" type="int" />
        </set>
        <set name="crowds" table="PRODUCT_CROWD">
            <key column="ID" />
            <element column="CROWD" type="int" />
        </set>
        <set name="destinations" table="PRODUCT_DESTINATION">
            <key column="PID" />
            <many-to-many class="Destination" column="DID" />
        </set>
        <set name="traffics" table="PRODUCT_TRAFFIC">
            <key column="PID" />
            <many-to-many class="DictTraffic" column="DID" />
        </set>
        <set name="types" table="PRODUCT_TYPE">
            <key column="PID" />
            <many-to-many class="DictProductType" column="DID" />
        </set>
        <set name="grades" table="PRODUCT_GRADE">
            <key column="PID" />
            <many-to-many class="DictProductGrade" column="DID" />
        </set>
        <set name="keywords" table="PRODUCT_KEYWORD">
            <key column="PID" />
            <many-to-many class="Keyword" column="DID" />
        </set>
        <set name="departureCities" table="PRODUCT_DEPARTURE_CITY">
            <key column="PID" />
            <many-to-many class="Keyword" column="DID" />
        </set>
        <set name="posters" table="PRODUCT_POSTER">
            <key column="PID" />
            <element column="IMAGE_URL" type="string" length="256"/>
        </set>
        <set name="photos" table="PRODUCT_PHOTO">
            <key column="PID" />
            <element column="IMAGE_URL" type="string" length="256"/>
        </set>
    </class>
</hibernate-mapping>