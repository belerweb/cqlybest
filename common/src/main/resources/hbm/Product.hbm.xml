<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="Product" table="PRODUCT">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="name" column="NAME" />
        <property name="days" column="DAYS" />
        <property name="daysUnit" column="DAYS_UNIT" />
        <property name="description" column="DESCRIPTION" />
        <property name="price" column="PRICE" />
        <property name="priceDescription" column="PRICE_DESCRIPTION" />
        <property name="effectiveDate" column="EFFECTIVE_DATE" />
        <property name="expiryDate" column="EXPIRY_DATE" />
        <property name="departureDate" column="DEPARTURE_DATE" />
        <property name="tripCharacteristic" column="TRIP_CHARACTERISTIC" />
        <property name="serviceStandard" column="SERVICE_STANDARD" />
        <property name="friendlyReminder" column="FRIENDLY_REMINDER" />
        <property name="recommendedItem" column="RECOMMENDED_ITEM" />
        <property name="published" column="PUBLISHED" />
        <property name="lastUpdate" column="LAST_UPDATE" />
        <set name="recommendedMonths" table="PRODUCT_RECOMMENDED_MONTH" cascade="all">
            <key column="ID" />
            <element column="MONTH" type="int" />
        </set>
        <set name="crowds" table="PRODUCT_CROWD" cascade="all">
            <key column="ID" />
            <element column="CROWD" type="int" />
        </set>
        <set name="destinations" table="PRODUCT_DESTINATION" cascade="all">
            <key column="PID" />
            <many-to-many class="Destination" column="DID" />
        </set>
    </class>
</hibernate-mapping>