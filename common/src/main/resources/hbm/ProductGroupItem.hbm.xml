<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.cqlybest.common.bean">
    <class name="ProductGroupItem" table="PRODUCT_GROUP_ITEM">
        <id name="id" column="ID">
            <generator class="native" />
        </id>
        <property name="groupType" column="GROUP_TYPE" />
        <property name="groupValue" column="GROUP_VALUE" length="256" />
        <property name="pgid" column="PGID" length="36" />
    </class>
</hibernate-mapping>